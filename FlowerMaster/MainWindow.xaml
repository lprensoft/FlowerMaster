                                      Margin="0,295,0,0"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"
                                      Width="230"
                                      Height="250"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      SelectionUnit="FullRow"
                                      SelectedCellsChanged="dgDaliy_SelectedCellsChanged">
