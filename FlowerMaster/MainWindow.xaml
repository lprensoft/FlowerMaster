<Controls:MetroWindow xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:cefSharp="clr-namespace:CefSharp.WinForms;assembly=CefSharp.WinForms"
                      x:Class="FlowerMaster.MainWindow"
                      mc:Ignorable="d"
                      Title="團長助理 2.1 (繁中版)"
                      Height="740"
                      Width="1176"
                      Icon="f23.ico"
                      Loaded="MetroWindow_Loaded"
                      Closing="MetroWindow_Closing"
                      StateChanged="MetroWindow_StateChanged"
                      WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button x:Name="btnTopMost" Content="置頂" ToolTip="使視窗置頂顯示" Click="btnTopMost_Click" />
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="449*"/>
            <ColumnDefinition Width="543*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <TabControl x:Name="mainTab"
                    Grid.Row="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="0,0,0,0"
                    SelectionChanged="mainTab_SelectionChanged" Grid.ColumnSpan="2">
            <TabItem x:Name="tabItemGame" Header="主頁">
                <Grid x:Name="grid1" Background="#FF0F0F0F">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnNews"
                            Grid.Column="1"
                            Height="38"
                            Width="38"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Margin="0,5,-2,0"
                            ToolTip="遊戲公告"
                            Click="btnNews_Click"
                            Style="{DynamicResource MetroCircleButtonStyle}" Visibility="Hidden">
                        <Rectangle Width="19"
                                   Height="15">
                            <Rectangle.Fill>
                                <VisualBrush Stretch="Fill"
                                             Visual="{StaticResource appbar_email}" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </Button>
                    <Button x:Name="btnMapInfo"
                            Grid.Column="1"
                            Height="38"
                            Width="38"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Margin="0,55,-2,0"
                            ToolTip="地圖情報"
                            Visibility="Hidden"
                            Click="btnMapInfo_Click"
                            Style="{DynamicResource MetroCircleButtonStyle}">
                        <Rectangle Width="19"
                                   Height="15">
                            <Rectangle.Fill>
                                <VisualBrush Stretch="Fill"
                                             Visual="{StaticResource appbar_eye}" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </Button>
                    <Button x:Name="btnCap"
                            Grid.Column="1"
                            Height="38"
                            Width="38"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0,-100,-2,0"
                            ToolTip="截圖"
                            Click="btnCap_Click"
                            Style="{DynamicResource MetroCircleButtonStyle}">
                        <Rectangle Width="19"
                                   Height="15">
                            <Rectangle.Fill>
                                <VisualBrush Stretch="Fill"
                                         Visual="{StaticResource appbar_camera}" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </Button>
                    <Button x:Name="btnAuto"
                            Grid.Column="1"
                            Height="38"
                            Width="38"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0,0,-2,0"
                            ToolTip="自動推圖"
                            Click="btnAuto_Click"
                            Style="{DynamicResource MetroCircleButtonStyle}">
                        <Rectangle Width="19"
                                   Height="15">
                            <Rectangle.Fill>
                                <VisualBrush Stretch="Fill"
                                             Visual="{StaticResource appbar_control_fastforward}" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </Button>
                    <Button x:Name="btnMute"
                            Grid.Column="1"
                            Height="38"
                            Width="38"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0,100,-2,0"
                            ToolTip="靜音"
                            Click="btnMute_Click"
                            Style="{DynamicResource MetroCircleButtonStyle}">
                        <Rectangle Width="19"
                                   Height="15">
                            <Rectangle.Fill>
                                <VisualBrush Stretch="Fill"
                                         Visual="{StaticResource appbar_sound_3}" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </Button>
                    <Button x:Name="btnUnMute"
                            Grid.Column="1"
                            Height="38"
                            Width="38"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0,100,-2,0"
                            ToolTip="恢復聲音"
                            Visibility="Hidden"
                            Click="btnUnMute_Click"
                            Style="{DynamicResource MetroCircleButtonStyle}">
                        <Rectangle Width="19"
                                   Height="15">
                            <Rectangle.Fill>
                                <VisualBrush Stretch="Fill"
                                         Visual="{StaticResource appbar_sound_mute}" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </Button>
                    <Button x:Name="btnRefresh"
                            Grid.Column="1"
                            Height="38"
                            Width="38"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Right"
                            Margin="0,0,-2,5"
                            ToolTip="重新載入"
                            Click="btnRefresh_Click"
                            Style="{DynamicResource MetroCircleButtonStyle}">
                        <Rectangle Width="19"
                                   Height="19">
                            <Rectangle.Fill>
                                <VisualBrush Stretch="Fill"
                                         Visual="{StaticResource appbar_refresh}" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </Button>
                    <Button x:Name="btnCord"
                            Grid.Column="1"
                            Height="38"
                            Width="38"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0,-300,-2,0"
                            ToolTip="座標"
                            Click="btnCord_Click"
                            Style="{DynamicResource MetroCircleButtonStyle}">
                        <Rectangle Width="19"
                            Height="19">
                            <Rectangle.Fill>
                                <VisualBrush Stretch="Fill"
                                    Visual="{StaticResource appbar_crosshair}" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </Button>
                    <Button x:Name="btnPush"
                            Grid.Column="1"
                            Height="38"
                            Width="38"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0,250,-2,0"
                            ToolTip="自動推兔 2.0"
                            Click="btnPush_Click"
                            Style="{DynamicResource MetroCircleButtonStyle}" >
                        <Rectangle Width="16"
                                Height="16">
                            <Rectangle.Fill>
                                <VisualBrush Stretch="Fill"
                                        Visual="{StaticResource appbar_control_play}" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </Button>
                    <Button x:Name="btnPushSet"
                            Grid.Column="1"
                            Height="38"
                            Width="38"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0,325,-2,0"
                            ToolTip="暫停自動推兔"
                            Click="btnPush_Set"
                            Visibility="Hidden"
                            Style="{DynamicResource MetroCircleButtonStyle}" >
                        <Rectangle Width="16"
                            Height="16">
                            <Rectangle.Fill>
                                <VisualBrush Stretch="Fill"
                                    Visual="{StaticResource appbar_checkmark_cross}" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </Button>
                    <WindowsFormsHost x:Name="wfh" Height="640" Width="1136" />
                </Grid>
            </TabItem>
            <TabItem Header="日誌">
                <Grid x:Name="grid2" Background="#FF0F0F0F">
                    <RichTextBox x:Name="gameLog"
                                 x:FieldModifier="public"
                                 HorizontalAlignment="Left"
                                 Margin="0,0,0,0"
                                 VerticalAlignment="Top"
                                 VerticalScrollBarVisibility="Visible"
                                 IsReadOnly="True"
                                 BorderThickness="0"
                                 Background="#FF0F0F0F" Height="{Binding ActualHeight, ElementName=grid2, Mode=OneWay}">
                        <FlowDocument/>
                    </RichTextBox>
                </Grid>
            </TabItem>
