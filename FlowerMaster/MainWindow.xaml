                                FontSize="16px"
                                Height="30"
                                VerticalAlignment="Top"
                                Margin="5,221,0,0"
                                Content="Raid与特命设置" Grid.ColumnSpan="2"/>
                            <Label Height="25"
                                VerticalAlignment="Top"
                                Margin="25,150,0,0"
                                Content="喝药：" Grid.ColumnSpan="2"/>
                            <CheckBox x:Name="chkPotionTrue"
                                VerticalAlignment="Top"
                                Margin="75,151,0,0"
                                Height="25"
                                Content="能者喝！" Grid.ColumnSpan="2" />
                            <TextBox x:Name="tbDelayTime"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Margin="110,330,0,0"
                                Width="50"
                                Text="" Grid.ColumnSpan="2"/>
                            <Label Height="25"
                                VerticalAlignment="Top"
                                Margin="25,181,0,0"
                                Content="碎石：" Grid.ColumnSpan="2"/>
                            <CheckBox x:Name="chkStoneTrue"
                                VerticalAlignment="Top"
                                Margin="75,180,0,0"
                                Height="25"
                                Content="强者碎！" Grid.ColumnSpan="2" />
                            <Label Height="25"
                                VerticalAlignment="Top"
                                Margin="25,258,0,0"
                                Content="Raid：" Grid.ColumnSpan="2"/>
                            <CheckBox x:Name="chkRaidTrue"
                                VerticalAlignment="Top"
                                Margin="75,259,0,0"
                                Height="25"
                                Content="打Boss！" Grid.ColumnSpan="2" />
                            <Label Height="25"
                                VerticalAlignment="Top"
                                Margin="25,289,0,0"
                                Content="特命：" Grid.ColumnSpan="2"/>
                            <CheckBox x:Name="chkSpecialTrue"
                                VerticalAlignment="Top"
                                Margin="75,290,0,0"
                                Height="25"
                                Content="虐特命！" Grid.ColumnSpan="2" />
                            <Label FontWeight="Bold"
                                FontSize="16px"
                                Height="30"
                                VerticalAlignment="Top"
                                Margin="5,326,268,0"
                                Content="设置延迟：" HorizontalAlignment="Right" Width="105"/>
                            <Label Height="25"
                        VerticalAlignment="Top"
                        Margin="25,370,156,0"
                        Content="默认延迟250，根据电脑性能可增减"/>
                            <Label Height="25"
                        VerticalAlignment="Top"
                        Margin="25,400,137,0"
                        Content="怕封号建议设置3000以上"/>
                            <Label Height="25"
                        VerticalAlignment="Top"
                        Margin="25,430,137,0"
